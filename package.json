{
  "name": "my-app",
  "version": "1.0.0",
  "description": "Full-stack React application",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "npm run install-all && cd client && npm run build && cd ../server && npm run build && cp -r ../client/build .",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "start": "cd server && npm start"
  },
  "keywords": [
    "react",
    "nodejs",
    "fullstack",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@types/multer": "^2.0.0",
    "@types/node-fetch": "^2.6.12",
    "form-data": "^4.0.3",
    "multer": "^2.0.1",
    "node-fetch": "^2.7.0",
    "sharp": "^0.34.2"
  }
}
